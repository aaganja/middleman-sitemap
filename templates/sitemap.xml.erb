<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
<% @pages.each do |p| %>
  <url>
    <loc><%= @hostname + encode(p.url).gsub(/\/$/,'') %></loc>
    <lastmod><%= Time.now %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>
<% end %>
</urlset>
